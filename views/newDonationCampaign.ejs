<% include headerUser %>
<br>
<h1 align="center">Donation Campaign </h1>
<br>

<div class="container">

    <div class="row">
        <form method="POST" action="/newCampaign">
            <div class="row">
                <div class="col-md-5"> </div>
                <div class="col-md-7">
                    <label for="campname"><b>Campaign Name</b></label>
                    <input type="text" name="campname" placeholder="Campaign Name" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4"> </div>
                <div class="col-md-8">
                    <label for="description"><b>Description</b></label>
                    <textarea type="text" name="description" rows="6" cols="30" placeholder="Campaign description"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4"> </div>
                <div class="col-md-8">
                    <label for="amount"><b>Target amount</b></label>
                    <input type="number" name="amount" placeholder="Target amount" />
                </div>
                </div>
                <div class="row">
                    <div class="col-md-4"> </div>
                    <div class="col-md-8">
                        <label for="deadline"><b>Deadline</b></label>
                        <input type="date" name="deadline">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4"> </div>
                    <div class="col-md-8">
                        <label for="benname"><b>Beneficiary Name</b></label>
                        <input type="text" name="benname" placeholder="Beneficiary Name" />
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-4"> </div>
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="submit" class="btn btn-danger" onclick="location.href='/userHome'">Cancel</button>
                    </div>
                </div>
        </form>
    </div>